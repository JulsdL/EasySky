<%# Display all the observation plannings %>
<div class= "container align-self-center">
  <div class="titre m-3">
    <h1> Mes plannings </h1>
  </div>
  <div class= "col-sm-5 mx-auto">
      <div class="observation_plannings">
        <% @observation_plannings.each do |observation_planning| %>
          <div class="card-paiement">
            <p>
              <div class="row m-1">
              <strong><%= "#{observation_planning.name} pour #{observation_planning.user.first_name}" %></strong>
              </div>
              <div class="row m-3">
              <%= "Date de dÃ©but #{observation_planning.start_time.strftime("%H:%M")} - Date de fin #{observation_planning.end_time.strftime("%H:%M")}" %>
              </div>
            </p>
            <%# Display the link to show the observation planning details %>
            <%= link_to "Afficher le planning", observation_planning_path(observation_planning), class: "btn-straight m-auto text-center", style: "width:250px" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
